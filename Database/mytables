create table station (
id int NOT NULL,
location varchar(50),
no_vehicles int ,
Primary key(id),
)

create table booking_employee (
id int NOT NULL,
name varchar(50) NOT NULL,
salary int ,
address varchar(50),
username varchar(30) NOT NULL,
password varchar(30) NOT NULL,
stationId int,
Primary key(id),
Foreign key (stationId) reference station (id)
ON DELETE SET NULL 
ON UPDATE CASCADE,
)

create table analyst (
id int NOT NULL,
name varchar(50) NOT NULL,
salary int,
address varchar(50),
username varchar(30) NOT NULL,
password varchar(30)NOT NULL,
stationId int,
Primary key(id),
Foreign key (stationId) reference station (id)
ON DELETE CASCADE 
ON UPDATE CASCADE,
)

create table Card
(
Id int not null,
Value int not null
primary key (id)
)

--table station has to be created first
create table trip
(
destination varchar(50) not null,
startingDate date,
duration int not null,
startingLocation varchar(50) not null,
cost int not null,
id int,
stationId int,
Foreign key (stationId) references station,
primary key (id),
)
create table Passenger
(
Id int not null,
Username varchar(50) not null,
Fname varchar(50),
Mname varchar(50),
Lname varchar(50),
Address varchar(50),
Gender char,
Phone varchar(50),
Password varchar(50) not null ,
Tripid int ,
Cardid int,
primary key(id),
Foreign key(Tripid) references Trip,  --take relation
Foreign key (Cardid) references Card  --has relation
)

